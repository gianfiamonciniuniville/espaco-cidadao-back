{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    // "baseUrl": ".",
    // "paths": {
    //   "@config/*": ["./src/config/*"],
    //   "@routes/*": ["./src/routes/*"],
    //   "@utils/*": ["./src/utils/*"],
    //   "@middlewares/*": ["./src/middlewares/*"],
    //   "@models/*": ["./src/models/*"]
    // },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
